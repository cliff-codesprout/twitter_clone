  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-content">
          <p class="title is-4">
            <%= link_to(tweet.user.display_name, profile_path(id: tweet.user.id)) %>
          </p>
        </div>
      </div>

      <div class="content">
        "<%= tweet.body %>"
        <br>
        <time><%= time_ago_in_words(tweet.created_at) %> ago</time>
      </div>
    </div>
  </div>
  <br />